<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root resizable="true" title="Lessons" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <VBox prefHeight="500.0" prefWidth="900.0" spacing="10.0">
        <padding>
          <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
        </padding>
        <children>
          <Label styleClass="label-header" text="Lessons" style="-fx-font-size: 16pt; -fx-font-weight: bold;"/>
          <TableView fx:id="lessonTable" prefHeight="450.0" prefWidth="900.0" VBox.vgrow="ALWAYS">
            <columnResizePolicy>
              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
              <TableColumn fx:id="dateColumn" prefWidth="150.0" minWidth="150.0" maxWidth="150.0" text="Date" resizable="false" />
              <TableColumn fx:id="planColumn" prefWidth="375.0" text="Lesson Plan" />
              <TableColumn fx:id="progressColumn" prefWidth="375.0" text="Lesson Progress" />
            </columns>
          </TableView>
          <Button fx:id="closeButton" mnemonicParsing="false" onAction="#handleClose" text="Close" />
        </children>
      </VBox>
    </Scene>
  </scene>
</fx:root>
