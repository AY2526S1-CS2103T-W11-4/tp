<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="0.5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
      </HBox>
      <HBox spacing="0" alignment="CENTER_LEFT">
        <Label text="Contact:" styleClass="field_label" />
        <Label fx:id="phone" styleClass="field_value" text="\$phone" />
      </HBox>
      <HBox spacing="0" alignment="CENTER_LEFT">
        <Label text="Time:" styleClass="field_label" />
        <Label fx:id="dayTime" styleClass="field_value" />
      </HBox>
      <HBox spacing="0" alignment="CENTER_LEFT">
        <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
          <image>
            <Image url="@../images/house.png" />
          </image>
          <HBox.margin>
            <Insets left="20" right="5" />
          </HBox.margin>
        </ImageView>
        <Label fx:id="address" styleClass="field_value" text="\$address" />
      </HBox>
       <HBox spacing="0" alignment="CENTER_LEFT">
        <Label text="Subject:" styleClass="field_label" />
        <Label fx:id="subjectLevel" styleClass="field_value" />
      </HBox>
      <HBox spacing="0" alignment="CENTER_LEFT">
        <Label text="Cost:" styleClass="field_label" />
        <Label fx:id="cost" styleClass="field_value" />
      </HBox>
            <HBox spacing="0" alignment="CENTER_LEFT">
        <Label text="Email:" styleClass="field_label" />
        <Label fx:id="email" styleClass="field_value" text="\$email" />
      </HBox>
      <FlowPane fx:id="tags">
        <padding>
          <Insets top="5" left="18" bottom="5" />
        </padding>
      </FlowPane>
    </VBox>
  </GridPane>
</HBox>
